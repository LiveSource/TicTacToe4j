<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Servlets -->
	<servlet>
		<servlet-name>loginService</servlet-name>
		<servlet-class>tictactoe.server.LoginServiceImplementation</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>gameService</servlet-name>
		<servlet-class>tictactoe.server.gameLogic.GameLogicImplementation</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginService</servlet-name>
		<url-pattern>/tictactoe/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>gameService</servlet-name>
		<url-pattern>/tictactoe/game</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>TicTacToe.html</welcome-file>
	</welcome-file-list>

</web-app>
